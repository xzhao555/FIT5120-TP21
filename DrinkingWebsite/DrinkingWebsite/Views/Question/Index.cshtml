
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel='stylesheet' href='~/Scripts/jquizzy/css/styles.css' />
    <link href="~/Content/blog.css" rel="stylesheet" />
    <script src='~/Scripts/jquizzy/init.js'></script>
    <script src='~/Scripts/jquery-3.4.1.min.js'></script>
    <script src='~/Scripts/jquizzy/js/jquery.jquizzy.js'></script>
   
    <style>
        .main-quiz-holder .slide-container .next, .main-quiz-holder .slide-container .final, .main-quiz-holder .slide-container .prev {
            width: 85px;
            height: 29px;
        }

        .main-quiz-holder .notice {
            bottom: 30px;
        }

        .blog-post {
            margin-bottom: 0px;
        }

        .main-quiz-holder .slide-container {
            width: 100%;
            padding: 20px 20px 50pt 50px;
        }
        h1, h2, h3, h4, h5, h6 .h1, .h2, .h3, .h4, .h5, .h6 {
            text-transform:none;
        }
        .lead {
            text-align: left;
            /*text-indent: 30px;*/
        }
        #quiz-container li {
            box-shadow: none;
          
        }
        .main-quiz-holder .slide-container ul.answers li {
            background: #f6f6f6;
            text-shadow: none;
        }
    </style>
</head>

<body>

    <div class="container" style="margin-top:40px;">
        <div class="row">
            <div class="col-md-12 blog-main">
                <h2 class="blog-post-title">
                    Alcohol consumption self assessment
                </h2>
                <span style="margin-bottom: 1.5rem; display: block; width: 20%; height: 5px; background-color: #edab00;"></span>
                <div class="blog-post" style="word-wrap: break-word; word-break: normal;">
                    <p class="lead">This questionnaire is about your drinking patterns. The test is completely confidential and anonymous; your results are not recorded. No personal information needed. </p>
                    <p class="lead"><span style="font-weight:bold;">Disclaimer: </span>This questionnaire does not provide a diagnosis of Alcohol Use Disorder The results cannot substitute for a full evaluation by a healthcare professional and should only be used as a guide to understand your alcohol use and the potential health issues.</p>
                    <p class="lead">
                        When answering the questions, use the last 12 months of your life as a frame of reference.
                    </p>
                </div>

            </div>
            <div id='quiz-container' style="box-shadow: none;"></div>
        </div>
    </div>


    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    <script>
        $('#quiz-container').jquizzy({
            questions: init.questions,
            resultComments: init.resultComments,
            twitterStatus: 'Woo! I got {score} on the quiz.'
        });</script>
</body>
</html>
