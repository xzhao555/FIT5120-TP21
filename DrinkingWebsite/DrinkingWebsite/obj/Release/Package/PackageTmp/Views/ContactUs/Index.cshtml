
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/blog.css" rel="stylesheet" />
<link href="~/Scripts/form-validation.css" rel="stylesheet" />
<style>
    .blog-post {
        margin-bottom: 2rem;
    }
</style>
<main role="main" class="container" style="margin-top:60px;margin-bottom:100px;">
    <div class="row">
        <div class="col-md-12 blog-main">
            <h2 class="blog-post-title">
                Contact
            </h2>
            <span style="margin-bottom: 2rem; display: block; width: 20%; height: 5px; background-color: #edab00;"></span>
            <div class="blog-post" style="word-wrap: break-word; word-break: normal;">
                <p class="lead">
                    Email us with any questions or inquiries. We would be happy to answer your questions.
                </p>
            </div>
        </div>
    </div>
    <form class="needs-validation" novalidate="">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="firstName">First name</label>
                <input type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                <div class="invalid-feedback">
                    Valid first name is required.
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <label for="lastName">Last name</label>
                <input type="text" class="form-control" id="lastName" placeholder="" value="" required="">
                <div class="invalid-feedback">
                    Valid last name is required.
                </div>
            </div>
        </div>

       

        <div class="mb-3">
            <label for="email">Email <span class="text-muted">(Optional)</span></label>
            <input type="email" class="form-control" id="email" placeholder="you@example.com">
            <div class="invalid-feedback">
                Please enter a valid email address for shipping updates.
            </div>
        </div>

        <div class="mb-3">
            <label for="address">Message</label>
            <textarea type="text" class="form-control" id="address" placeholder="Message" required=""></textarea>
            <div class="invalid-feedback">
                Please enter your Message.
            </div>
        </div>

      
        <hr class="mb-4">
        <button class="btn btn-primary btn-lg btn-block" type="submit">Submit</button>
    </form>

</main>
<script src="~/Scripts/form-validation.js"></script>