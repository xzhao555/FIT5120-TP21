                    ['Reduced risk', 28.8508, 40.8222, 35.0323],
                    ['Increase risk', 52.9514, 33.1696, 42.5807],
                    ['yearly', 18.7, 16.6, 17.4],
                    ['monthly', 16.3, 11.3, 13.6],
                    ['weekly', 18, 5.2, 11.5]
                ]
            },
